<div class="container mt-5">
  <h1>New game</h1>

  <div class="grid">
    <% @letters.each do |letter| %>
      <div class="letter-square">
        <%= letter %>
      </div>
    <% end %>
  </div>

  <p>What is the longest word you can find?</p>
  <form action="/score" method="post" data-turbo="false" class="d-flex">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letters.join(" ") %>
    <div class="input-group">
        <input type="text" name="word" class="form-control">
        <button type="submit" class="btn btn-outline-secondary">Play</button>
    </div>
  </form>

  <p id="score">Current score: <strong><%= session[:score]%></strong></p>
</div>
